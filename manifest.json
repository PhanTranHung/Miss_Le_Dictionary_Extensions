{
  "name": "Miss Le Dictionaries",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Dictionary",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_16.png",
      "48": "icons/icon_16.png",
      "64": "icons/icon_16.png",
      "128": "icons/icon_16.png"
    }
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_16.png",
    "48": "icons/icon_16.png",
    "64": "icons/icon_16.png",
    "128": "icons/icon_16.png"
  },
  "background": {
    "persistent": false,
    "page": "bg/background.html"
  },
  "permissions": [
    "https://*.oxfordlearnersdictionaries.com/",
    "storage",
    "tabs"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+A",
        "mac": "Alt+A",
        "chromeos": "Alt+A",
        "linux": "Alt+A"
      }
    },
    "turn_on_the_light": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Turn on the Light"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["contentscripts/assistant.css"],
      "js": ["contentscripts/assistant.js"]
    }
  ],
  "web_accessible_resources": [
    "helper/variables.js",
    "materials/imgs/sunny-light.svg"
  ]
}
